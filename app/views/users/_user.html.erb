<tr>
  <td><%= user.name %></td>
  <td><%= user.followings.count %></td>
  <td><%= user.followers.count %></td>
  <td>
    <% if user_signed_in? %>
      <% if user == current_user %>
        <p>それはあなたです！</p>
      <% else %>
        <% if user.follower_users.include? current_user %>
          <%= link_to 'Unfollow', following_path(user), method: :delete, class: 'btn btn-danger' %>
        <% else %>
          <%= form_for Following.new to_user: user do |f| %>
            <%= f.hidden_field :to_user_id %>
            <%= f.submit 'Follow', class: 'btn btn-primary' %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </td>
</tr>
